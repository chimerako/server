ssh-keygen -t ed25519 -b 4096 -C "pilyonghasbanned@gmail.com"
ssh-keygen -R

#Install Swizzin
bash <(curl -sL git.io/swizzin) && . ~/.bashrc

#Install additional ssl cert    #Cloudflare - 3e6ce41bad3e05af11b04884a8ca566077601
box install letsencrypt

#Nginx Recompilation
apt-get install nginx build-essential
#copy results
nginx -V 

#to be added:
--sbin-path=/usr/sbin/nginx
--add-module=/opt/nginx-push-stream-module

#download nginx same version
cd /opt
wget http://nginx.org/download/nginx-1.18.0.tar.gz
tar -xvzf nginx-1.18.0.tar.gz

#download rtmp module
git clone https://github.com/sergey-dryabzhinsky/nginx-rtmp-module.git
#Install some prerequisites:
apt-get install libpcre3-dev libssl-dev libxml2-dev libxslt-dev libgd-dev libgeoip-dev

#Stop Nginx
service nginx stop

#start compilation
cd /opt/nginx-1.18.0/
./configure --with-cc-opt='-g -O2 -ffile-prefix-map=/build/nginx-q9LD4J/nginx-1.18.0=. -fstack-protector-strong -Wformat -Werror=format-security -fPIC -Wdate-time -D_FORTIFY_SOURCE=2' --with-ld-opt='-Wl,-z,relro -Wl,-z,now -fPIC' --prefix=/usr/share/nginx --sbin-path=/usr/sbin/nginx --conf-path=/etc/nginx/nginx.conf --http-log-path=/var/log/nginx/access.log --error-log-path=/var/log/nginx/error.log --lock-path=/var/lock/nginx.lock --pid-path=/run/nginx.pid --modules-path=/usr/lib/nginx/modules --http-client-body-temp-path=/var/lib/nginx/body --http-fastcgi-temp-path=/var/lib/nginx/fastcgi --http-proxy-temp-path=/var/lib/nginx/proxy --http-scgi-temp-path=/var/lib/nginx/scgi --http-uwsgi-temp-path=/var/lib/nginx/uwsgi --with-compat --with-debug --with-pcre-jit --with-http_ssl_module --with-http_stub_status_module --with-http_realip_module --with-http_auth_request_module --with-http_v2_module --with-http_dav_module --with-http_slice_module --with-threads --with-http_addition_module --with-http_gunzip_module --with-http_gzip_static_module --with-http_sub_module --add-module=/opt/nginx-rtmp-module

make
make install

#start nginx
service nginx start

#to prevent update
apt-mark hold nginx
nginx set on hold



#Install Node and NPM
# Using Ubuntu
curl -fsSL https://deb.nodesource.com/setup_17.x | sudo -E bash -
sudo apt-get install -y nodejs

# Using Debian, as root
curl -fsSL https://deb.nodesource.com/setup_17.x | bash -
apt-get install -y nodejs

#Create Ramdisk
mkdir /mnt/ramdisk
nano /etc/fstab
tmpfs       /mnt/ramdisk tmpfs   nodev,nosuid,noexec,nodiratime,size=8G   0 0

#Install Node-media
mkdir rtmp
cd rtmp
npm install node-media-server
nano live.js  





